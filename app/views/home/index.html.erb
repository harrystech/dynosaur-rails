<h1>Dynosaur Status - <%= @name %> </h1>
<div>
		<% if @dry_run %>
			<p>DRY RUN!</p>
		<% end %>
	<dl>
		<dt>Current</dt><dd><%= @status["current"] %> dynos</dd>
		<dt>Estimated Need</dt><dd><%= @status["current_estimate"] %> dynos</dd>
		<dt>Last Changed</dt><dd><%= @status["last_changed"] %>
			(<%= @status["time"].to_i - @status["last_changed"].to_i %> seconds ago)</dd>
	</dl>
</div>

<% if @status["results"] %>
	<% for name, result in @status["results"] %>
		<h2>Plugin: <%= name %></h2>
		<div>
			<dl>
				<dt>Value</dt><dd><%= result["value"] %> <%= result["unit"] %></dd>
				<dt>Estimate</dt><dd><%= result["estimate"] %> dynos</dd>
				<dt>Last Retrieved</dt><dd><%= result["last_retrieved"] %>
					(<%= @status["time"].to_i -  result["last_retrieved"].to_i %> seconds ago) </dd>
			</dl>
		</div>
	<% end %>
<% end %>
